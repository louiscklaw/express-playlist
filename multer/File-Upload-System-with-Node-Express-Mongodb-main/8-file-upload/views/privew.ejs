<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">
    <title>File Uploads</title>
    
    <style>
        img{
            width:100%;
            padding:2px;
            border:solid 1px #ccc;
        }
        h1{
            text-align:center;
        }
    </style>
</head>
 
<body>

    <div class="container">
        <div class="row">
  <div class="col-lg-12"> <h1>Privew Image</h1></div> 
  <div class="col-lg-12"> <a href="/" class="btn btn-primary">Go Back</a></div>
<%x.forEach((y)=>{%>


   <div class="col-lg-3">
       <img src="/<%=y.Picture%>">

       <a href="/edit/<%=y.Picture%>?_method=PUT" class="btn btn-primary mt-2 mb-2" style='float: left; margin-right:5px;'>Edit Images</a>
       <form method="POST" action="/delete/<%=y.Picture%>?_method=delete">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-primary mt-2 mb-2">Delete</button>
      </form>
   </div>
   <%})%>
       
        </div>
     </div>  


    </div>
  </body>
</html>